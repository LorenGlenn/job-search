<div class="col-md-4 job-box pre-scrollable">
  <% if @github.any? %>
    <h2>Github.com results:</h2><hr>
    <% @github.each do |g| %>
    Company: <%= g["company"] %>, <%= g["location"]  %>
    Job Title: <%= link_to g["title"], g["url"] %>
    <hr>
    <% end %>
  <% else %>
    <p>
      There are no results.
    </p>
  <% end %>
</div>
